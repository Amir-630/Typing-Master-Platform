{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start MySQL",
      "type": "shell",
      "command": "sudo service mysql start",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Full Stack Start",
      "dependsOn": ["Start MySQL", "Start Backend", "Start Frontend"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}